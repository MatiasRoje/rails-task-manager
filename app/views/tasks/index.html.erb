<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
  <li><button class="fa-regular fa-square-check"></i></button><%= link_to task.title, task_path(task) %> <%= button_to "", task_path(task), :class => 'fa-solid fa-trash-can', method: :delete %></li>
    <% else %>
    <li><button class="fa-regular fa-square"></i></button><%= link_to task.title, task_path(task) %> <%= button_to "", task_path(task), :class => 'fa-solid fa-trash-can', method: :delete %></li>
    <% end %>
  <% end %>
</ul>
<br>
